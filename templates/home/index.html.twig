{% extends 'base.html.twig' %}

{% block body %}
    <div class="container h-100">
    <div class="d-flex flex-column justify-content-center h-100">
            <div class="row">
                <div class="col-12 col-md-6 col-lg-4 m-auto text-center mb-2">
                    <h1>QUI SUIS JE ?</h1>
                </div>
            </div>
        <div class="row">
            <div class="col-12 col-md-6 col-lg-4 m-auto text-center mb-4">
                <h6>Actuellement {{ characters|length }} personnages à deviner ...</h6>
            </div>
        </div>
            <div class="row">
                <div class="col-12 col-md-6 col-lg-4 m-auto">
                    <a href="{{ path('game') }}" class="btn btn-primary btn-block">Créer une nouvelle partie</a>
                </div>
            </div>
        {% if game is not null %}
            <div class="row mt-1">
                <div class="col-12 col-md-6 col-lg-4 m-auto">
                    <a href="{{ path('game', {"uniqueId":game.uniqueId}) }}" class="btn btn-success btn-block">Rejoindre ma partie</a>
                </div>
            </div>
            <div class="row mt-1">
                <div class="col-12 col-md-6 col-lg-4 m-auto">
                    <a href="{{ path('exit') }}" class="btn btn-secondary btn-block">Quitter ma partie</a>
                </div>
            </div>
        {% endif %}
        <div class="row mt-4">
            <div class="col-12 col-md-6 col-lg-4 m-auto">
                <a href="{{ path('rules') }}" class="btn btn-secondary btn-block">Questions fréquentes</a>
            </div>
        </div>

        </div>
    </div>

{% endblock %}
